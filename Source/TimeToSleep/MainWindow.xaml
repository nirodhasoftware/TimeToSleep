<Window x:Class="TimeToSleep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TimeToSleep" Height="110" Width="227" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="hibernate.ico">
    <Grid>
        <Button Name="SetButton" HorizontalAlignment="Left" Margin="163,12,0,0" VerticalAlignment="Top" Width="39" Click="Button_Click">Set</Button>
        <Label Content="mins" HorizontalAlignment="Left" Margin="42,9,0,0" VerticalAlignment="Top"/>
        <TextBox Name="minutes" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="32" TextChanged="minutes_TextChanged"/>
        <ComboBox Name="ModeSelection" HorizontalAlignment="Left" Margin="77,11,0,0" VerticalAlignment="Top" Width="81">
            <ComboBoxItem IsSelected="True">Hibernate</ComboBoxItem>
            <ComboBoxItem>Sleep</ComboBoxItem>
        </ComboBox>
        <Label Name="TimeRemainingLabel" Content="Time Remaining: 0:00" HorizontalAlignment="Left" Margin="10,37,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.31,-0.01" Width="192"/>
    </Grid>
</Window>
